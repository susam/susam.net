types {
    text/plain c cc lisp md py yaml yml;
}
limit_req_zone $binary_remote_addr zone=formlimit:10m rate=4r/m;

# https://example.com/
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name susam.net susam;
    ssl_certificate /etc/letsencrypt/live/susam.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/susam.net/privkey.pem;
    root /var/www/susam.net;
    location /form/ {
        limit_req zone=formlimit burst=10 nodelay;
        proxy_set_header HOST $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://127.0.0.1:4242;
    }
    location /files/ {
        autoindex on;
    }
    rewrite ^/blog/rss/$ /blog/feed.xml permanent;
    rewrite ^/blog/rss.xml$ /blog/feed.xml permanent;
    rewrite ^/blog/obfuscating-main/$ /blog/obfuscated-main.html permanent;
    rewrite ^/blog/infosys-tcs-or-wipro/$ /blog/infosys-tcs-or-wipro.html permanent;
    rewrite ^/blog/lisp-in-vim-with-slimv-or-vlime.html$ /blog/lisp-in-vim.html permanent;
    rewrite ^/maze/rss.xml$ /maze/feed.xml permanent;
    rewrite ^/maze/simplicity-of-irc.html /maze/wall/simplicity-of-irc.html permanent;
    rewrite ^/maze/paredit-slurp-and-barf-mnemonics.html /maze/wall/paredit-slurp-and-barf-mnemonics.html permanent;
    rewrite ^/maze/cafe/(.*)$ /maze/wall/$1 permanent;
}

# https://www.example.com/ => https://example.com/
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name www.susam.net susam.in;
    ssl_certificate /etc/letsencrypt/live/susam.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/susam.net/privkey.pem;
    return 301 https://susam.net$request_uri;
}

# http://example.com/, http://www.example.com/ => https://example.com/
server {
    listen 80;
    listen [::]:80;
    server_name susam.net www.susam.net susam.in;
    return 301 https://susam.net$request_uri;
}
